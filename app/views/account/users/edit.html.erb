<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2 user_setup_content">
    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <h2><sapn class="fa fa-sign-in"></sapn> 账户设定</h2>
      <hr />
    <%= simple_form_for [:account, @user] do |f| %>
      <div class="form-inputs">
        <%= f.input :nickname, :label => '昵称', required: true %>
        <%= f.input :truename, :label => '真实姓名' %>
        <%= f.input :address, :label => '地址'  %>
        <%= f.input :numbers, :label => '联系电话'  %>
        <div class="form-actions">
          <%= f.button :submit, "更新",class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    </div>
  </div>
</div>
