<!DOCTYPE html>
<html>
<head>
  <title>JDstore 后台</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="content">
      <div class="container navbar_fix">
        <%= render "common/navbar" %>
        <div class="row">
          <div class="col-md-2">
            <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
              <li> <%= link_to("产品管理", admin_products_path) %> </li>
              <li> <%= link_to("订单管理", admin_orders_path) %> </li>
              <li> <%= link_to("分类管理", admin_categories_path) %> </li>
              <li> <%= link_to("文章管理", admin_articles_path) %> </li>
            </ul>
          </div>
          <div class="col-md-10">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <%= render "common/footer" %>
    <%= javascript_include_tag 'application', :defer => true%>
</body>
</html>
