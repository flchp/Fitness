<div class="btn-group">
  <button class='btn btn-menu' type='button'>
    <%= link_to("所有产品", products_path) %>
  </button>
  <% Category.all.each do |category| %>
    <div class='btn-group clearfix'>
      <button class='btn btn-menu' type='button'>
        <%= link_to(category.name, products_path(category: category)) %>
      </button>
    </div>
  <% end %>
</div>
<hr/>

<div class="path-box">
  <!--=== 產品頁面路徑 ===-->
  <div class="left-box">
    <%= link_to("Fitness", products_path) %>

    <% if params[:category].present? %>
    / <a href="products?"></a> <a href="products?category=<%= @category.id %>"><%= @category.name %></a>


    <% end %>
  </div>


  <!--=== 排序選單 ===-->
  <div class="right-box">
    <div class="dropdown btn-group clearfix">
      <% if params[:order].present? %>
        <button class="btn btn-reorder dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <%= params[:order] %> <span class="caret"></span>
        </button>
      <% else %>
        <button class="btn btn-reorder dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
           综合排序 <span class="caret"></span>
        </button>
      <% end %>

      <!-- 選項：列出排序方式 -->
      <ul class="reorder dropdown-menu ">
        <li><%= link_to("综合排序", products_path) %></li>
        <li><%= link_to("价格从低到高", products_path(category: @category, :order => "价格从低到高")) %></li>
        <li><%= link_to("价格从高到低", products_path(category: @category, :order => "价格从高到低")) %></li>
      </ul>
    </div>
  </div>

</div>
<br/>
