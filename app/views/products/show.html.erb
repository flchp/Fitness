
<div class="row">
  <div class="col-md-4 col-md-offset-2">

    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-4">
    <h2> <%= @product.title %> </h2>


    <hr>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <hr>
    <div> 数量 : <%= @product.quantity %> </div>

    <div class="product-price"> ￥ <%= @product.price %> </div>
    <br>

    <div>
      <% if @product.quantity.present? && @product.quantity > 0 %>
        <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-lg btn-danger") %>
      <% else %>
      已销售一空，无法购买
      <% end %>
      <% if current_user && current_user.is_collect_of?(@product) %>
        <%= link_to("取消收藏", un_collect_product_path(@product), method: :post, class: "btn btn-lg btn-danger") %>
      <% else %>
        <%= link_to("收藏", collect_product_path(@product), method: :post, class: "btn btn-lg btn-danger") %>
      <% end %>
    </div>

  </div>

</div>



<div class="col-md-8 col-md-offset-2">

  <div class="tab">
    <button class="tablinks" onclick="openCity(event, '商品评价')" id="defaultOpen">商品评价</button>
  </div>


  <div id="商品评价" class="tabcontent">
    <div>
      <%= link_to("添加评论", new_product_comment_path(@product), class: "btn btn-default pull-right")%>
    </div>
    <br>
    <% @product.comments.each do |post| %>
      <p><%= post.content %></p>
      <p><%= post.user.email %></p>
      <p><%= post.created_at.strftime("%Y-%m-%d") %></p>
      <hr>
    <% end %>
  </div>
  <br>
</div>

<script>
  document.getElementById("defaultOpen").click();
</script>
