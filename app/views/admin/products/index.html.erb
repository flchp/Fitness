<h2> Product List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>

  <table class="table table-striped list">
  <thead class="font">
    <th>
      id
    </th>
    <th>
      产品
    </th>
    <th>
      名称
    </th>
    <th>
      价格
    </th>
    <th>
      管理选项
    </th>

  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to admin_product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(product)) %>|
          <%= link_to("Delete", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" } ) %>
          <%= link_to "向上", move_up_admin_product_path(product), method: :patch %>
          <%= link_to "向下", move_down_admin_product_path(product), method: :patch %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</table>
